<p id="notice"><%= notice %></p>

<h1>Replies</h1>
<h2>内容:<%= @blog.body %></h2>
<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Reply', createrep_blog_path(@blog) %>
<%= link_to 'back blog', blogs_path %>
